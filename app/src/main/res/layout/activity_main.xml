<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mp1"
    tools:context="com.example.ashish.maps.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/tv_info"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:textSize="30dp"
        android:text="CLICK ON THE BUTTON BELOW TO ACCESS YOUR LOCATION:"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="150dp"
        android:background="@drawable/ic_my_location_black_24dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:id="@+id/btn_loc"
        android:layout_height="125dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="100dp"
            android:layout_weight="1"
            android:id="@+id/tv_lat"
            android:paddingTop="15dp"
            android:textSize="17dp"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:text="Latitude:"
            android:layout_height="match_parent" />
        <EditText
            android:layout_width="100dp"
            android:layout_weight="1"
            android:id="@+id/ed_lat"
            android:textAlignment="center"
            android:text="0"
            android:textSize="15dp"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="100dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:id="@+id/tv_long"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:textSize="17dp"
            android:paddingTop="15dp"
            android:text="Longitude:"
            android:layout_height="match_parent" />
        <EditText
            android:layout_width="100dp"
            android:layout_weight="1"
            android:id="@+id/ed_long"
            android:textAlignment="center"
            android:text="0"
            android:layout_marginRight="5dp"
            android:textSize="15dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <Button
        android:layout_marginTop="20dp"
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:id="@+id/btn_nearby"
        android:textSize="20dp"
        android:drawableLeft="@drawable/ic_near_me_black_24dp"
        android:text="NEARBY PLACES"
        android:fontFamily="casual"
        android:layout_height="80dp" />
</LinearLayout>
